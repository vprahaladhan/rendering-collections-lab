<h2>Open Orders</h2>
<table>
  <tr>
    <th>Order Id</th>
    <th>Product
    <th>Price
    <th>Customer</th>  
  </tr>
  <% order.products.each do |product| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= order.customer.name %></td>
    </tr>
  <% end %>
</table>